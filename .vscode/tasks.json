{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: cl.exe build active file",
            "type": "shell",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": [
                "$msCompile"
            ],
            "detail": "Generated task for building with MSVC."
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/c",
                "del",
                "/q",
                "${fileDirname}\\*.exe",
                "${fileDirname}\\*.obj",
                "${fileDirname}\\*.pdb"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe 生成活动文件",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}